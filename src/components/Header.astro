---
export interface Props {
	title: string
}
const { title } = Astro.props
---

<h1 class="text-4xl">
	<span class="text-gradient">{title}</span>
</h1>

<style>
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
